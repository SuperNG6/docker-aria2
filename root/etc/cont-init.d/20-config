#!/usr/bin/with-contenv bash

# make folders
mkdir -p \
	/config/ssl \
  /downloads/completed \
  /downloads/recycle

# copy
if [[ ! -e /config/aria2.conf ]]
then
  cp /aria2/conf/aria2.conf.default /config/aria2.conf
fi

if [[ ! -e /config/aria2.session ]]
then
  touch /config/aria2.session
fi

if [[ ! -e /config/dht.dat ]]
then
  touch /config/dht.dat
fi

if [[ ! -e /config/move.log ]]
then
  touch /config/move.log
fi

if [[ ! -e /config/delete.log ]]
then
  touch /config/delete.log
fi

# permissions
chown -R abc:abc \
	/config \
  /downloads
  
chmod a+x \
  /aria2/script/delete.sh \
  /aria2/script/delete.aria2.sh \
  /aria2/script/tracker.sh \
  /aria2/script/move.sh

# auto updatetracker
if [ "$UpdateTracker" == "true" ]
then
  s6-setuidgid abc /aria2/script/tracker.sh
fi
